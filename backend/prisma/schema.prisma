generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Já estava lendo seu .env
}



model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  googleId  String?  @unique // Opcional, para login com Google
  
  // Para Refresh Tokens
  hashedRefreshToken String? // Opcional

  // Campos automáticos
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}